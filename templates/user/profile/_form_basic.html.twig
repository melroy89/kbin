{{ form_start(form) }}
<div class="mb-3">
    {{ form_label(form.username, 'username'|trans) }}
    <div class="input-group input-group-lg">
        {{ form_widget(form.username) }}
    </div>
</div>

{% if form.avatar is defined %}
    <div class="mb-3">
        {{ form_label(form.avatar, 'avatar'|trans) }}
        <div class="input-group input-group-lg">
            {{ form_widget(form.avatar, {'attr':{ 'class': 'form-control' }}) }}
        </div>
    </div>
{% endif %}

<div class="mb-12 text-end">
    {{ form_row(form.submit, { 'label': 'done'|trans }) }}
</div>
{{ form_end(form) }}
