{% extends 'base.html.twig' %}

{% block title %}{{ 'profile'|trans }}{% endblock %}

{% block body %}
    <div class="kbin-profile kbin-profile-page">
        {% include 'user/profile/_tabs.html.twig' %}

        <ul class="nav nav-pills mb-5" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active text-reset" id="pills-activity-tab" data-bs-toggle="pill" data-bs-target="#pills-activity"
                        type="button" role="tab"
                        aria-controls="pills-activity" aria-selected="true">{{ 'activity'|trans }}</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link text-reset" id="pills-votes-tab" data-bs-toggle="pill" data-bs-target="#pills-votes" type="button" role="tab"
                        aria-controls="pills-votes" aria-selected="false">{{ 'votes'|trans }}
                </button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-activity" role="tabpanel" aria-labelledby="pills-activity-tab">
                {{ render_chart(contentChart) }}
            </div>
            <div class="tab-pane fade" id="pills-votes" role="tabpanel" aria-labelledby="pills-votes-tab">
                {{ render_chart(voteChart) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {% include 'user/_sidebar.html.twig' with {user: app.user} %}
    {% include 'user/profile/_sidebar.html.twig' %}
    {{ parent() }}
    <div class="mb-4">
        {% include 'user/_moderator_list_card.html.twig'with {user: app.user} %}
    </div>
{% endblock %}
