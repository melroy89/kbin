{% extends 'base.html.twig' %}

{% block title %}{{ 'edit_profile'|trans }}{% endblock %}

{% block body %}
    <div class="kbin-profile kbin-profile-edit-page">
        {% include 'user/profile/_tabs.html.twig' %}

        <div class="kbin-profile-edit">
            <div class="kbin-magazine-background"></div>

            <ul class="nav nav-pills mb-5" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active text-reset" id="pills-avatar-tab" data-bs-toggle="pill" data-bs-target="#pills-avatar" type="button"
                            role="tab" aria-controls="pills-avatar" aria-selected="true">{{ 'change_avatar'|trans }}
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link text-reset" id="pills-pass-tab" data-bs-toggle="pill" data-bs-target="#pills-pass" type="button"
                            role="tab" aria-controls="pills-pass" aria-selected="false">{{ 'change_password'|trans }}
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link text-reset" id="pills-email-tab" data-bs-toggle="pill" data-bs-target="#pills-email" type="button"
                            role="tab" aria-controls="pills-email" aria-selected="false">{{ 'change_email'|trans }}
                    </button>
                </li>
            </ul>
            <div class="row">
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-avatar" role="tabpanel" aria-labelledby="pills-avatar-tab">
                        <div class="col-lg-6 mb-3">
                            {% include 'user/profile/_form_basic.html.twig' with {'form': form_basic} %}
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-pass" role="tabpanel" aria-labelledby="pills-pass-tab">
                        <div class="col-lg-6 mb-3">
                            {% include 'user/profile/_form_password.html.twig' with {'form': form_password} %}
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-email" role="tabpanel" aria-labelledby="pills-email-tab">
                        <div class="col-lg-6 mb-3">
                            {% include 'user/profile/_form_email.html.twig' with {'form': form_email} %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {% include 'user/_sidebar.html.twig' with {user: app.user} %}
    {% include 'user/profile/_sidebar.html.twig' %}
    {{ parent() }}
    <div class="mb-4">
        {% include 'user/_moderator_list_card.html.twig'with {user: app.user} %}
    </div>
{% endblock %}
