{% from 'user/_macros.html.twig' import user %}


<div class="toast-header">
    <strong class="me-auto">{{ user(notification.message.sender) }}</strong>
    <small class="text-muted">
        <time data-controller="timeago"
              data-timeago-refresh-interval-value="10000"
              data-timeago-datetime-value="{{ notification.createdAt|date('c') }}">{{ notification.createdAt|ago }}</time>
    </small>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
</div>
<div class="toast-body">
    {{ user(notification.message.sender, {prefix: false}) }} {{'wrote_message'|trans }} <a
            href="{{ path('user_profile_message', {'id': notification.message.thread.id}) }}">{{ notification.message.thread.title }}</a>
</div>
