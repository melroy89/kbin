{% extends 'base.html.twig' %}

{% block title %}{{ 'edit_profile'|trans }}{% endblock %}

{% block body %}
    <div class="kbin-profile kbin-profile-edit-page">
        {% include 'user/profile/_tabs.html.twig' %}

        <div class="kbin-profile-edit mt-lg-4">
            <div class="kbin-magazine-background"></div>

            <div class="row">
                <h2 class="font-weight-bold">{{ 'edit_profile'|trans }}</h2>
                <div class="col-lg-6 mb-3">
                    {% include 'user/profile/_form_basic.html.twig' with {'form': form_basic} %}
                    <hr>
                </div>

                <h2 class="font-weight-bold">{{ 'change_password'|trans }}</h2>
                <div class="col-lg-6 mb-3">
                    {% include 'user/profile/_form_password.html.twig' with {'form': form_password} %}
                    <hr>
                </div>

                <h2 class="font-weight-bold">{{ 'change_email'|trans }}</h2>
                <div class="col-lg-6 mb-3">
                    {% include 'user/profile/_form_email.html.twig' with {'form': form_email} %}
                    <hr>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {% include 'user/_sidebar.html.twig' with {user: app.user} %}
    {% include 'user/profile/_sidebar.html.twig' %}
    {{ parent() }}
    <div class="mb-4">
        {% include 'user/_moderator_list_card.html.twig'with {user: app.user} %}
    </div>
{% endblock %}
