{% from 'user/_macros.html.twig' import avatar %}

<div class="kbin-user-profile mt-lg-0">
    <div class="kbin-entry card shadow-lg bg-white rounded mb-4">
        <div class="kbin-entry-info card-body">
            <div class="kbin-entry-info-user clearfix text-center">
                {% if user.avatar %}
                    <div class="kbin-user-avatar">
                        {{ avatar(user) }}
                    </div>
                {% endif %}
                <div>
                    <h5 class="card-title font-weight-bold pt-2">{{ user.username }}</h5>
                    {% include 'user/_follow_button.html.twig' %}
                </div>
            </div>

            <div class="mt-3">
                <ul class="list-unstyled clearfix text-center text-lg-start">
                    <li>
                        <span class="text-muted small">{{ 'joined'|trans }}:</span>
                        <time data-controller="timeago"
                              data-timeago-refresh-interval-value="10000"
                              data-timeago-datetime-value="{{ user.createdAt|date('c') }}"{{ user.createdAt|ago }}></time>
                    </li>
                    <li>
                        <span class="text-muted small">{{ 'reputation_points'|trans }}:</span> {{ user.entries|length + user.entryComments|length + user.posts|length + user.postComments|length }}
                    </li>
                    <li>
                        <span class="text-muted small">{{ 'comments'|trans }}:</span> {{ user.entryComments|length }}
                    </li>
                    <li>
                        <span class="text-muted small">{{ 'threads'|trans }}:</span> {{ user.entries|length }}
                    </li>
                    <li>
                        <span class="text-muted small">{{ 'posts'|trans }}:</span> {{ user.posts|length }}
                    </li>
                    <li>
                        <span class="text-muted small">{{ 'replies'|trans }}:</span> {{ user.postComments|length }}
                    </li>
                    <li>
                        <span class="text-muted small">{{ 'thread_views'|trans }}:</span> {{ user.entriesViewsCount }}
                    </li>
                    {% if not app.user or user is not same as app.user %}
                        <li class="mt-2">
                        <span class="text-muted small"><a href="{{ path('user_message', {'username': user.username}) }}"><i
                                        class="fa fa-envelope"></i> {{ 'send_message'|trans }}</a></span>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="kbin-entry card shadow-lg bg-white rounded mb-4">
            <div class="card-body">
                <ul class="list-unstyled clearfix mb-0 pb-0">
                    <li>
                        <form action="{{ path('user_delete', {username: user.username}) }}" method="POST" onsubmit="return confirm('{{ 'are_you_sure'|trans }}');">
                            <input type="hidden" name="token" value="{{ csrf_token('user_delete') }}">
                            <button type="submit" class="btn btn-link">
                                <span class="small"><i class="fa fa-trash"></i> {{ 'delete_account'|trans }}</span>
                            </button>
                        </form>
                    </li>
                    <li>
                        <form action="{{ path('user_purge', {username: user.username}) }}" method="POST" onsubmit="return confirm('{{ 'are_you_sure'|trans }}');">
                            <input type="hidden" name="token" value="{{ csrf_token('user_purge') }}">
                            <button type="submit" class="btn btn-link">
                                <span class="small"><i class="fa fa-trash"></i> {{ 'purge_account'|trans }}</span>
                            </button>
                        </form>
                    </li>
                    <li>
                        <form action="{{ path(user.isBanned ? 'user_unban' : 'user_ban', {username: user.username}) }}" method="POST"
                              onsubmit="return confirm('{{ 'are_you_sure'|trans }}');">
                            <input type="hidden" name="token" value="{{ csrf_token('user_ban') }}">
                            <button type="submit" class="btn btn-link">
                                <span class="small"><i class="fa fa-trash"></i> {{ user.isBanned ? 'unban_account': 'ban_account'|trans }}</span>
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    {% endif %}
</div>

