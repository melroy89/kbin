{% from 'user/_macros.html.twig' import avatar %}

<div class="table-responsive">
    <table class="table align-middle">
        <thead>
        <tr>
            <td>{{ 'name'|trans }}</td>
            <td>{{ 'threads'|trans }}</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for badge in badges %}
            <tr>
                <td><span class="badge bg-secondary me-1">{{ badge.name }}</span></td>
                <td>{{ badge.countBadges }}</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="ZgÅ‚oszenie">
                        <form method="post"
                              action="{{ path('magazine_panel_badge_remove', {'magazine_name': badge.magazine.name, 'badge_id': badge.id} ) }}"
                              onsubmit="return confirm('{{ 'are_you_sure'|trans }}');">
                            <input type="hidden" name="token" value="{{ csrf_token('badge_remove') }}">
                            <button type="submit" class="btn btn-danger btn-sm rounded-0 rounded-start">{{ 'delete'|trans }}</button>
                        </form>

                        <form method="post"
                              action="">
                            <button type="submit" class="btn btn-primary btn-sm rounded-0 rounded-end">{{ 'edit'|trans }}</button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
