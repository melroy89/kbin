{{ form_start(form) }}
<div class="kbin-magazine-moderator-form">
    <div class="mb-3">
        {{ form_label(form.user, 'username'|trans) }}
        <div class="input-group">
            {{ form_widget(form.user) }}
        </div>
        <div class="valid-feedback">
            {{ form_errors(form.user) }}
        </div>
    </div>

    <div class="mb-12 text-end">
        {{ form_row(form.submit, { 'label': 'add'|trans }) }}
    </div>
</div>
{{ form_end(form) }}
