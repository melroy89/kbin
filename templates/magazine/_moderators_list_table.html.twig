{% from 'user/_macros.html.twig' import user %}

<div class="table-responsive">
    <table class="table align-middle">
        <thead>
        <tr>
            <td>{{ 'username'|trans }}</td>
            <td>{{ 'added'|trans }}</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for moderator in moderators %}
            <tr>
                <td>{{ user(moderator.user) }}</td>
                <td><time data-controller="timeago"
                          data-timeago-refresh-interval-value="10000"
                          data-timeago-datetime-value="{{ moderator.createdAt|date('c') }}">{{ moderator.createdAt|ago }}</time></td>
                <td>{% include 'user/_follow_button.html.twig' with {'user': moderator.user} %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% if(moderators.haveToPaginate) %}
    {{ pagerfanta(moderators, null, {'pageParameter':'[p]'}) }}
{% endif %}
