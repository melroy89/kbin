{% use '_layout/_navbar_links.html.twig' %}
{% use '_layout/_entry_url.html.twig' %}
{% use '_layout/_post_url.html.twig' %}

{%- macro navbar_link(name, options) -%}
    {%- with {
        name: name,
        sortBy: options.sortBy ?? null,
        magazine: options.magazine ?? null,
        isSubPage: options.isSubPage ?? false,
        isCommentsPage: options.isCommentsPage ?? false,
        } only -%}
        {{ block('navbar_link') }}
    {%- endwith -%}
{%- endmacro -%}

{%- macro navbar_tag_link(name, options) -%}
    {%- with {
        name: name,
        sortBy: options.sortBy ?? null,
        magazine: options.magazine ?? null,
        isSubPage: options.isSubPage ?? false,
        isCommentsPage: options.isCommentsPage ?? false,
        onlyEntries: true
        } only -%}
        {{ block('navbar_tag_link') }}
    {%- endwith -%}
{%- endmacro -%}

{%- macro navbar_domain_link(name, options) -%}
    {%- with {
        name: name,
        sortBy: options.sortBy ?? null,
        magazine: options.magazine ?? null,
        isSubPage: options.isSubPage ?? false,
        isCommentsPage: options.isCommentsPage ?? false,
        onlyEntries: true
        } only -%}
        {{ block('navbar_domain_link') }}
    {%- endwith -%}
{%- endmacro -%}

{%- macro entry_url(entry, options) -%}
    {%- with {
        entry: entry,
        } only -%}
        {{ block('entry_url')|spaceless }}
    {%- endwith -%}
{%- endmacro -%}

{%- macro post_url(post, options) -%}
    {%- with {
        post: post,
        } only -%}
        {{ block('post_url')|spaceless }}
    {%- endwith -%}
{%- endmacro -%}
