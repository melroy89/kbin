<div class="kbin-users kbin-voters mb-5">
    <div class="card">
        <div class="card-header">
            {{ 'votes'|trans }}
        </div>
        <ul class="list-group list-group-flush">
            {% for vote in votes %}
                <li class="list-group-item">
                    {% include 'user/_avatar.html.twig' with { user: vote.user } %}<span class="text-muted">/u/</span><a
                            class="text-decoration-none stretched-link"
                            href="{{ path('user', {'username': vote.user.username}) }}">{{ vote.user.username }}</a>
                    {% if vote.choice is same as 1 %}
                        <span class="fa fa-arrow-up float-end kbin-color-up-vote"></span>
                    {% else %}
                        <span class="fa fa-arrow-down float-end kbin-color-down-vote"></span>
                    {% endif %}
                </li>
            {% endfor %}
            {% if more %}
                <li class="list-group-item text-center">
                    <a class="text-decoration-none stretched-link"
                       href="{{ url }}">+{{ more }} {{ 'more'|trans }}...</a>
                </li>
            {% endif %}
        </ul>
    </div>
</div>
